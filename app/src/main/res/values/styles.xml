<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MaterialButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimary">#FD2222</item>
        <item name="colorOnSurface">#FD2222</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/txt_white35</item>
        <item name="android:progressTint">@color/offwhite</item>
        <item name="android:thumbTint">@android:color/white</item>
    </style>

    <style name="MySeekBarMin" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/txt_white35</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@android:color/transparent</item>
        <item name="android:minHeight">0.2dp</item>
        <item name="android:maxHeight">0.2dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="checkBoxStyle" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/offwhite</item>
        <item name="android:textColorSecondary">@color/offwhite</item>
        <item name="colorPrimary">@color/offwhite</item>
        <item name="colorPrimaryVariant">@color/offwhite</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/offwhite</item>
    </style>

    <style name="txt_toolbar" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="txt_title" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="txt_titleMsg" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/selector_ripple</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


</resources>